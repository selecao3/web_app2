{% extends "Home" %}

{% block content %}
<div class="container">
    <div class="page-header" id="banner">
        <div class="row my-4">
            <div class="col-12">
                <h1 class="display-3" >Creaters Board</h1>
                <br>
                <p class="lead">
                    クリエイターとファンのためのサイト
                </p>
            </div>
        </div>
    </div>
    <style>
        div#tmp{
            width: 800px;
            margin-top: 12em;
        }
    </style>

    <div id="tmp" class="col-lg-12">
        <div class="page-header">
            <h1 style="margin-bottom: 20px">Latest news</h1>
        </div>
        <div class="bs-component">
            {% for i in post_img %}
            {{i.name}}さんがタイトル「<a href="/creater/account/{{ i.account }}"><b>{{i.title}}</b></a>」を投稿しました！
            <hr>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock content %}